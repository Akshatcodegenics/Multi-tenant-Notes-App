{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/(auth|notes|tenants)(/.*)?$", "dest": "/server.js" },
    { "src": "^/api/health$", "dest": "/server.js" },
    { "src": "^/(.*)\\.(css|js|svg|png|jpg|jpeg|gif|ico|webp)$", "dest": "/public/$1.$2" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^(?!/(auth|notes|tenants|api)).*", "dest": "/public/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  }
}
